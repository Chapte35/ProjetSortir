{% extends 'base.html.twig' %}

{% block body %}
    <div class="container card mt-3 flex mb-3">
        <h1>Sortie</h1>

        {{ form_errors(form) }}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div>
            <button type="submit" class="btn btn-secondary w-100 mb-3" name="action" value="enregistrer">Enregistrer</button>
            <button type="submit" class="btn btn-success w-100 mb-3" name="action" value="publier">Publier la sortie</button>
            <a type="submit" class="btn btn-warning w-100 mb-3" href="{{ path('app_main') }}">Annuler</a>
        </div>
        {{ form_end(form) }}

        <button type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#justificationModal">
            Annuler la Sortie
        </button>

        {# Inclure le modal #}
        {{ render(controller('App\\Controller\\SortieController::modalAction')) }}
{% endblock %}

